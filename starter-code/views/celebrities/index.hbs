<div class="container">

  <div class="row">
    <div class="col-md-6">
      <h2>List of celebrities</h2>
    </div>
    <div class="col-md-6">
      <ul class="celebrities-list">
        {{#each celebrities}}
        <li><a href="/celebrities/show/{{_id}}">{{name}}</a>
            <form action="/celebrities/delete/{{_id}}" method="post">  
            <button type="submit" class="btn btn-dark">Delete</button>
            </form>
        
        </li>
        {{/each}}
      </ul>
       <a href="/celebrities/add/">New celebrity</a>

    </div>
  </div>
</div>